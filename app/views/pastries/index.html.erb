<h1>Latest Pastries hot out of the oven!</h1>
	
	<section class="pastries">
	<!-- @pastries.each do |pastry| .... end is called a loop -->
		<% @pastries.each do |pastry| %>

			<div class="pastry">
				<p><%= link_to pastry[:name], pastry_path(pastry) %></p>
				<p><%= pastry[:price_in_pence] %></p>
			</div>

		<% end %>
	</section>